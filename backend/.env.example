# =====================================
# ESTOQUE CLINIC - Environment Variables
# =====================================

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# JWT Authentication
JWT_SECRET=estoque_clinic_jwt_secret_change_in_production_2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=estoque_clinic
DB_USER=postgres
DB_PASSWORD=postgres
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif
UPLOAD_PRODUCTS_PATH=uploads/products
UPLOAD_CLINICS_PATH=uploads/clinics
UPLOAD_TEMP_PATH=uploads/temp

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@estoqueclinic.com
EMAIL_FROM_NAME=EstoqueClinic System

# Temperature Monitoring
TEMP_MIN_THRESHOLD=2
TEMP_MAX_THRESHOLD=8
TEMP_CHECK_INTERVAL=300000
TEMP_ALERT_EMAIL=alerts@clinica.com

# Product Expiry Alerts
EXPIRY_WARNING_DAYS=30
EXPIRY_CRITICAL_DAYS=7
EXPIRY_CHECK_INTERVAL=86400000

# Multi-tenancy Configuration
DEFAULT_TIMEZONE=America/Sao_Paulo
MAX_CLINICS_PER_GROUP=50
MAX_USERS_PER_CLINIC=100

# Security Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=1800000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/estoque-clinic.log
LOG_MAX_FILES=10
LOG_MAX_SIZE=10485760

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# Feature Flags
ENABLE_TEMPERATURE_MONITORING=true
ENABLE_EMAIL_ALERTS=true
ENABLE_AUDIT_LOGS=true
ENABLE_REAL_TIME_UPDATES=true

# External Integrations
# ANVISA API (for product validation)
ANVISA_API_URL=https://consultas.anvisa.gov.br
ANVISA_API_KEY=your-anvisa-api-key

# WhatsApp Integration (optional)
WHATSAPP_API_URL=https://api.whatsapp.business
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER=5511999999999

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60000

# Cache Configuration (Redis - optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# Development Only
DEBUG_SQL=false
DEBUG_AUTH=false
MOCK_EMAIL=true
MOCK_SMS=true