# ==================================================
# ESTOQUE CLINIC - VARIÁVEIS DE AMBIENTE
# Copie este arquivo para .env e configure os valores
# ==================================================

# ==========================================
# CONFIGURAÇÕES GERAIS
# ==========================================
NODE_ENV=production
PORT=3001
API_VERSION=1.0.0

# ==========================================
# BANCO DE DADOS POSTGRESQL
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tematico
DB_USER=postgres
DB_PASSWORD=your-secure-database-password

# Pool de conexões
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# ==========================================
# REDIS CACHE
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TIMEOUT=5000

# ==========================================
# AUTENTICAÇÃO JWT
# ==========================================
# ATENÇÃO: MUDE ESTES VALORES EM PRODUÇÃO!
JWT_SECRET=your-super-secure-jwt-secret-key-256-bits-minimum
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-256-bits-minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# SEGURANÇA
# ==========================================
# API Key para operações administrativas
API_KEY=your-super-secure-api-key-change-in-production

# CORS Origins (separados por vírgula)
CORS_ORIGIN=http://localhost:4200,https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ==========================================
# RECURSOS E UPLOADS
# ==========================================
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ==========================================
# EMAIL (FUTURO)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@estoqueclinic.com

# ==========================================
# MONITORAMENTO E OBSERVABILIDADE
# ==========================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
AUDIT_RETENTION_DAYS=365

# ==========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ==========================================
# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/estoqueclinic.crt
SSL_KEY_PATH=/etc/ssl/private/estoqueclinic.key

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=estoqueclinic-backups

# ==========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ==========================================
# Apenas para desenvolvimento local
DEV_SWAGGER_ENABLED=true
DEV_CORS_ENABLED=true
DEV_VERBOSE_LOGGING=true

# ==========================================
# DOCKER E CONTAINERIZAÇÃO
# ==========================================
COMPOSE_PROJECT_NAME=estoque-clinic
COMPOSE_FILE=docker-compose.yml:docker-compose.prod.yml

# Portas dos serviços
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
BACKEND_PORT=3001
DB_EXTERNAL_PORT=5432
REDIS_EXTERNAL_PORT=6379

# ==========================================
# CLOUD E DEPLOYMENT
# ==========================================
# AWS (se usando)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Domain
DOMAIN=estoqueclinic.com
API_DOMAIN=api.estoqueclinic.com
APP_DOMAIN=app.estoqueclinic.com

# ==========================================
# EXEMPLO PARA DESENVOLVIMENTO LOCAL
# ==========================================
# NODE_ENV=development
# DB_PASSWORD=postgres
# JWT_SECRET=dev-jwt-secret-not-for-production
# CORS_ORIGIN=http://localhost:4200
# LOG_LEVEL=debug
# SWAGGER_ENABLED=true