# ==================================================
# ESTOQUE CLINIC - DESENVOLVIMENTO LOCAL
# Configurações seguras para desenvolvimento
# ==================================================

NODE_ENV=development
PORT=3001

# Database Development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tematico
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Development
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Development (NÃO USAR EM PRODUÇÃO)
JWT_SECRET=dev-jwt-secret-not-for-production-use-256-bits-minimum-in-prod
JWT_REFRESH_SECRET=dev-refresh-secret-not-for-production-use-256-bits-minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security Development
API_KEY=dev-api-key-not-for-production
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Rate Limiting (mais permissivo em dev)
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# Logging Development
LOG_LEVEL=debug
LOG_CONSOLE_ENABLED=true
LOG_FILE_ENABLED=true

# Features Development
SWAGGER_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
DEV_VERBOSE_LOGGING=true

# File uploads
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# Audit
AUDIT_RETENTION_DAYS=90